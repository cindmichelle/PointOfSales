<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDark"
    android:gravity="center"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/main_menu_foods_and_beverages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:paddingBottom="22.5dp">

                <LinearLayout
                    android:background="@drawable/menu_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="25dp"
                    android:paddingHorizontal="25dp"
                    android:id="@+id/foods_and_beverages_border">
                    <ImageView
                        android:layout_height="250dp"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/foods"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mainMenuText"
                        android:gravity="left"
                        android:paddingVertical="15dp"
                        android:lineSpacingMultiplier="1.30"
                        android:layout_marginTop="2dp"
                        android:textSize="30sp"
                        android:text="FOODS &amp; BEVERAGES ORDER" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_menu_sales_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:paddingBottom="22.5dp">

                <LinearLayout
                    android:background="@drawable/menu_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="25dp"
                    android:paddingHorizontal="25dp"
                    android:id="@+id/sales_report_border">
                    <ImageView
                        android:layout_height="250dp"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/report"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mainMenuText"
                        android:gravity="left"
                        android:paddingVertical="15dp"
                        android:lineSpacingMultiplier="1.30"
                        android:layout_marginTop="2dp"
                        android:textSize="30sp"
                        android:text="SALES REPORT" />
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>


    </ScrollView>
</LinearLayout>
