<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style
        name="PopupTitle">
        <item name="android:fontFamily">@font/coco_gothic_bold_trial</item>
        <item name="android:textColor">#201F1F</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="btnPopUpTitle">
        <item name="android:fontFamily">@font/coco_gothic_bold_trial</item>
        <item name="android:textColor">#201F1F</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style
        name="cashPopUpText">
        <item name="android:fontFamily">@font/coco_gothic_bold_trial</item>
        <item name="android:textColor">#201F1F</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="cashPopUpTextWrapper">
        <item name="android:paddingLeft">33dp</item>
        <item name="android:paddingRight">33dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="menuText">
        <item name="android:fontFamily">@font/coco_gothic_bold_trial</item>
        <item name="android:textColor">#FF1F1F1F</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="mainMenuText">
        <item name="android:fontFamily">@font/glacialindifference_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/glacialindifference_regular</item>
        <item name="android:textSize">30dp</item>
    </style>
</resources>
